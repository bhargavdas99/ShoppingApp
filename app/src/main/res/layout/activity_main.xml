<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0F4F67"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editTextNumberDecimal3"
        android:layout_width="126dp"
        android:layout_height="53dp"

        android:background="@drawable/border"
        android:ems="10"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        android:textColor="#060606"
        app:layout_constraintBaseline_toBaselineOf="@+id/editTextNumberDecimal4"
        app:layout_constraintEnd_toStartOf="@+id/editTextNumberDecimal4"
        app:layout_constraintHorizontal_bias="0.435"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="80dp"
        android:layout_height="29dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="64dp"
        android:text="Weight"
        android:textColor="#FFFEFE"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/editTextNumberDecimal3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="91dp"
        android:layout_height="27dp"
        android:text="Price"
        android:textColor="#F9F9F9"
        android:textSize="20sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.715"
        app:layout_constraintStart_toEndOf="@+id/textView" />

    <Button
        android:id="@+id/button2"
        android:layout_width="110dp"
        android:layout_height="60dp"
        android:layout_marginEnd="148dp"
        android:background="@drawable/border"
        android:shadowColor="#090808"
        android:text="grams"
        android:textColor="#FFFFFF"
        android:textSize="17sp"
        app:backgroundTint="#9921DE"
        app:cornerRadius="25dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="72dp"
        android:layout_height="58dp"
        android:layout_marginTop="324dp"
        android:background="@drawable/border"
        android:shadowColor="#090808"
        android:text="kg"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:backgroundTint="#9921DE"
        app:cornerRadius="25dp"
        app:layout_constraintEnd_toStartOf="@+id/button2"
        app:layout_constraintHorizontal_bias="0.839"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="140dp"
        android:layout_height="30dp"
        android:text="Calculate for"
        android:textColor="#F8F5F5"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/editTextNumberDecimal5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.594"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumberDecimal4"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="312dp"
        android:layout_height="61dp"
        android:background="#0F4F67"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#0D0C0C"
        android:textColorHint="#100E0E"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.591"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button2"
        app:layout_constraintVertical_bias="0.156" />

    <EditText
        android:id="@+id/editTextNumberDecimal5"
        android:layout_width="213dp"
        android:layout_height="50dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/border"

        android:ems="10"
        android:inputType="numberDecimal"
        android:shadowColor="#000000"
        android:textAlignment="center"
        android:textColor="#070707"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editTextNumberDecimal4"
        android:layout_width="146dp"
        android:layout_height="56dp"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/border"
        android:ems="10"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/editTextNumberDecimal5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.651" />

    <Button
        android:id="@+id/button3"
        android:layout_width="89dp"
        android:layout_height="58dp"
        android:background="@drawable/border"
        android:shadowColor="#060606"
        android:text="Clear"
        android:textColor="#FEFAFA"
        android:textSize="17sp"
        app:backgroundTint="#CD2323"
        app:cornerRadius="25dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.305"
        app:layout_constraintStart_toEndOf="@+id/button2" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Unitary Method"
        android:textColor="#F4E64E"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.666" />

</androidx.constraintlayout.widget.ConstraintLayout>